<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:background="#e6e6e6"
    android:padding="5dp"
    android:layout_gravity="center">


    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="#4d4d4d"
        android:id="@+id/exit_popup_wheatgrasspowder"
        android:text="X"
        android:layout_gravity="end"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/circlebackground"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/brawler"
            android:text="Macro Values per 100g:"
            android:textColor="#404040"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="#ff0000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/brawler"
            android:padding="8dp"
            android:text="Energy (KJKcal): 816KJ/195Kcal"
            android:textColor="#404040"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/brawler"
            android:padding="8dp"
            android:text="Fat: 2.4g   (of which saturates - 0.3g)"
            android:textColor="#404040"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/brawler"
            android:padding="8dp"
            android:text="Protein: 21.5g"
            android:textColor="#404040"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/brawler"
            android:padding="8dp"
            android:text="Carbohydrate: 21.8g   (of which sugars - 1.3g)"
            android:textColor="#404040"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/brawler"
            android:padding="8dp"
            android:text="Dietary Fibre: 42.1g"
            android:textColor="#404040"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/brawler"
            android:padding="8dp"
            android:text="Salt: 0.2mg"
            android:textColor="#404040"
            android:textSize="12sp" />

    </LinearLayout>




</LinearLayout>