<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context="com.londonsoftware.calisthenics.thecalisthenicsblueprint.NewNoteActivity">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
   >


    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/brawler"
        android:hint="Title (E.g. My first muscle up)"
        android:inputType="text"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/edit_text_description"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:gravity="start|top"
        android:fontFamily="@font/brawler"
        android:hint="Description (E.g. Not bad, but need to improve on the form)"
        android:inputType="textMultiLine"
        android:textSize="14sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/brawler"
        android:text="Priority:"
        android:textSize="14sp"
        android:padding="5dp"
        android:textColor="#003380" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="205dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:text="10 - Highest Priority\n  1 - Lowest Priority"
        android:textColor="#003380"
        android:textSize="12sp" />

    <NumberPicker
        android:id="@+id/number_picker_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
            android:id="@+id/selectdate_trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="45dp"
            android:fontFamily="@font/brawler"
           android:padding="5dp"
        android:background="@drawable/button_design_macrosbutton3"
            android:text="Select Date:"
            android:textColor="#ffffff"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="saveNote"
        android:background="#ffffff"
        android:src="@drawable/save_floppydisk"
        android:text="Save"
        android:textSize="16sp" />



</LinearLayout>
</ScrollView>